<Window x:Class="_2048.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2048"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid x:Name="Grid" Margin="50,60,50,40" KeyDown="Posunuj" Focusable="True" Background="#F5F5F5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Stylish Rectangle tiles -->
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="0" Grid.Column="0" Margin="5"/>
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="0" Grid.Column="1" Margin="5"/>
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="0" Grid.Column="2" Margin="5"/>
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="0" Grid.Column="3" Margin="5"/>
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="1" Grid.Column="0" Margin="5"/>
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="1" Grid.Column="1" Margin="5"/>
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="1" Grid.Column="2" Margin="5"/>
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="1" Grid.Column="3" Margin="5"/>
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="2" Grid.Column="0" Margin="5"/>
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="2" Grid.Column="1" Margin="5"/>
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="2" Grid.Column="2" Margin="5"/>
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="2" Grid.Column="3" Margin="5"/>
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="3" Grid.Column="0" Margin="5"/>
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="3" Grid.Column="1" Margin="5"/>
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="3" Grid.Column="2" Margin="5"/>
            <Rectangle RadiusX="15" RadiusY="15" Fill="Beige" HorizontalAlignment="Stretch" Height="84" Stroke="Black" VerticalAlignment="Stretch" Width="175" Grid.Row="3" Grid.Column="3" Margin="5"/>
        </Grid>

        <Label FontSize="20" FontWeight="Bold" Content="Score:" HorizontalAlignment="Left" Margin="50,20,0,0" VerticalAlignment="Top" Height="35" Width="66"/>
        <Label x:Name="Skore" FontSize="20" FontWeight="Bold" Content="0" HorizontalAlignment="Left" Margin="116,20,0,0" VerticalAlignment="Top" Height="35" Width="82"/>
    </Grid>
</Window>
